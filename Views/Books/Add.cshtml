@model Book


<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        padding: 30px;
    }

    h2 {
        color: #333;
        margin-bottom: 20px;
        font-weight: bold;
        text-align: center;
    }

    .book-form {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #006699;
            box-shadow: 0 0 5px rgba(0, 102, 153, 0.2);
        }

    label {
        font-size: 14px;
        font-weight: 600;
        color: #555;
    }

    .btn {
        padding: 10px 15px;
        font-size: 16px;
        border-radius: 4px;
    }

    .btn-primary {
        background-color: #006699;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #005580;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .mt-2 {
        margin-top: 1rem;
        text-align: center;
    }
</style>
<h2>Add New Book</h2>

<form method="post">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>Author</label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label>Genre</label>
        <input asp-for="Genre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Total Copies</label>
        <input asp-for="TotalCopies" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Available Copies</label>
        <input asp-for="AvailableCopies" class="form-control" type="number" />
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Add Book</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>

    </div>
</form>
