@model IEnumerable<Book>

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Total Copies</th>
            <th>Available Copies</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@book.TotalCopies</td>
                <td>@book.AvailableCopies</td>
                <td>
                    <a href="/books/edit/@book.BookId" class="btn btn-secondary">Edit</a> |
                    <form method="post" action="/books/delete/@book.BookId" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/books/add">Add New Book</a>
