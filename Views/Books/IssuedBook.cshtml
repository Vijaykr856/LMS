@model IEnumerable<IssuedBook>
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        padding: 30px;
    }

    h2 {
        color: #333;
        margin-bottom: 20px;
        font-weight: bold;
        text-align: center;
    }

    .issued-books-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    .table {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
        padding: 12px;
    }

    .table td, .table th {
        padding: 12px;
        text-align: left;
    }

    .table-striped tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .btn {
        padding: 10px 15px;
        font-size: 16px;
        border-radius: 4px;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .mt-3 {
        margin-top: 1rem;
        text-align: center;
    }
</style>

<h2>Issued Books List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Issued To</th>
            <th>Issue Date</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var issuedBook in Model)
        {
            <tr>
                <td>@issuedBook.Book.Title</td>
                <td>@issuedBook.Book.Author</td>
                <td>@issuedBook.IssuedTo</td>
                <td>@issuedBook.IssueDate.ToShortDateString()</td>
               
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary">All Book/ HomePage</a>
